@using QLSieuThiWeb.Models
@{
    ViewData["Title"] = "Hóa Đơn";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Cột trái: Chi tiết hóa đơn -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Chi tiết hóa đơn</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered" id="gioHangTable">
                        <thead class="table-light">
                            <tr>
                                <th width="5%">STT</th>
                                <th width="15%">Mã SP</th>
                                <th width="30%">Tên SP</th>
                                <th width="15%">Đơn giá</th>
                                <th width="15%">Số lượng</th>
                                <th width="15%">Thành tiền</th>
                                <th width="5%">Xóa</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Cột phải: Danh sách sản phẩm -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Danh sách sản phẩm</h5>
                    <div class="input-group mt-2">
                        <input type="text" id="searchSP" class="form-control" placeholder="Tìm sản phẩm...">
                        <button class="btn btn-outline-primary" onclick="timSanPham()">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="list-group" id="danhSachSanPham">
                        @foreach (var sp in ViewBag.Products)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@sp.tenSP</h6>
                                        <small>Mã: @sp.maSP</small>
                                        <p class="mb-1">Giá: @sp.gia đ</p>
                                    </div>
                                    <div class="input-group" style="width: 150px;">
                                        <input type="number" class="form-control form-control-sm" value="1" min="1" max="@sp.soLuong">
                                        <button class="btn btn-primary btn-sm" onclick="themVaoGio('@sp.maSP', this)">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Phần thanh toán ở cuối trang -->
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">SĐT Khách hàng</label>
                                <input type="text" id="sdtKH" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group mb-3">
                                <span class="input-group-text">Số tiền khách đưa</span>
                                <input type="number" id="tienKhachDua" class="form-control" onchange="tinhTienThua()">
                                <span class="input-group-text">đ</span>
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text">Tiền thừa</span>
                                <input type="text" id="tienThua" class="form-control" readonly>
                                <span class="input-group-text">đ</span>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            <h5>Tổng tiền: <span id="tongTien">0</span>đ</h5>
                            <div class="btn-group mt-2">
                                <button class="btn btn-success" onclick="thanhToanNgay()">Thanh toán ngay</button>
                                <button class="btn btn-primary" onclick="thanhToanGiaoHang()">Giao hàng</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Template cho sản phẩm -->
<template id="sanPhamTemplate">
    <div class="list-group-item">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h6 class="mb-1">{{tenSP}}</h6>
                <small class="text-muted">Mã: {{maSP}}</small>
                <p class="mb-1">Giá: {{donGia}}</p>
            </div>
            <div class="input-group" style="width: 120px">
                <button class="btn btn-outline-secondary btn-sm" onclick="giamSoLuong(this)">-</button>
                <input type="number" class="form-control form-control-sm text-center" value="1" min="1" max="{{soLuong}}">
                <button class="btn btn-outline-secondary btn-sm" onclick="tangSoLuong(this)">+</button>
                <button class="btn btn-primary btn-sm ms-2" onclick="themVaoGio(this)">Thêm</button>
            </div>
        </div>
    </div>
</template>

<!-- Toast Notification -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="toast" class="toast align-items-center text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/hoadon.js"></script>
}
<style>
    .table th {
        font-weight: 600;
    }
    
    .card {
        border-radius: 0.5rem;
        border: none;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
</style> 
