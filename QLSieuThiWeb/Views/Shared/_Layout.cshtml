<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Lý Siêu Thị</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Quản Lý Siêu Thị</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav w-100 justify-content-evenly">
                    @if (ViewBag.quyen != "admin"){
                    <li class="nav-item">
                        <a class="nav-link" href="/HoaDon">
                            <i class="fas fa-file-invoice"></i> Hóa Đơn
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/QuanLyHoaDon">Quản Lý Hóa Đơn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/KhachHang">Quản Lý Khách Hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/SanPham">Quản Lý Sản Phẩm</a>
                    </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="/Kho">Quản Lý Kho</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/BaoCao">Báo Cáo Thống Kê</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>